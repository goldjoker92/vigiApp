{
  "breadcrumbs.enabled": true,
  "window.title": "${activeEditorLong}",
  "workbench.editor.labelFormat": "long",
  "explorer.compactFolders": false,
  "explorer.copyRelativePathSeparator": "/",

  "workbench.tree.indent": 16,
  "workbench.tree.renderIndentGuides": "always",

  "workbench.editor.enablePreview": true,

  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.rulers": [100],
  "editor.minimap.enabled": false,

  /* Prettier par défaut */
  "[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[javascriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[typescript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[typescriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[json]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[jsonc]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "prettier.singleQuote": true,
  "prettier.trailingComma": "all",
  "prettier.printWidth": 100,

  /* Actions au save : manuelles => "explicit" (tu déclenches via Cmd Palette) */
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit",
    "source.sortMembers": "explicit"
  },

  "eslint.useFlatConfig": true,
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
  "eslint.workingDirectories": [
    { "mode": "auto" },
    { "directory": "./functions", "changeProcessCWD": true }
  ],
  "eslint.codeActionsOnSave.mode": "all",

  "jest.runMode": { "type": "on-demand" },
  "testing.automaticallyOpenTestResults": "neverOpen",

  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.env.windows": {
    "ANDROID_SDK_ROOT": "C:\\Users\\Oscar\\AppData\\Local\\Android\\Sdk",
    "ANDROID_HOME": "C:\\Users\\Oscar\\AppData\\Local\\Android\\Sdk",
    "PATH": "${env:PATH};C:\\Users\\Oscar\\AppData\\Local\\Android\\Sdk\\platform-tools;C:\\Users\\Oscar\\AppData\\Local\\Android\\Sdk\\emulator"
  },

  "typescript.preferences.importModuleSpecifier": "non-relative",

  "search.exclude": {
    "**/node_modules": true,
    "**/.git": true,
    "**/.expo": true,
    "android/.gradle": true,
    "android/app/build": true,
    "ios/build": true,
    "dist": true,
    "build": true
  },
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.git/**": true,
    "android/.gradle/**": true,
    "android/app/build/**": true,
    "ios/build/**": true
  },
  "files.simpleDialog.enable": true,

  "react-native.packager.port": 8081,
  "react-native.android.variant": "debug",
  "react-native.android.logCatFilters": [{ "name": "ReactNativeJS", "priority": "I" }],

  "java.import.gradle.enabled": true,
  "java.configuration.runtimes": [
    {
      "name": "JavaSE-17",
      "path": "C:\\Program Files\\Java\\jdk-17"
    }
  ],
  "gradle.java.home": "C:\\Program Files\\Java\\jdk-17",
  "gradle.nestedProjects": true,
  "kotlin.languageServer.enabled": true,

  "toolbar-buttons.buttons": [
    {
      "text": "$(file-symlink-file)",
      "tooltip": "Copier chemin ABSOLU (sélection explorer ou fichier actif)",
      "command": "copyFilePath"
    },
    {
      "text": "$(link)",
      "tooltip": "Copier chemin RELATIF au workspace",
      "command": "copyRelativeFilePath"
    }
  ],
  "toolbar-buttons.alignment": "right",
  "toolbar-buttons.visibility": { "global": true },

  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true
  },
  "recommendations": [
    "esbenp.prettier-vscode",
    "dbaeumer.vscode-eslint",
    "eamodio.gitlens",
    "Gruntfuggly.toolbar-buttons", // boutons cliquables (copier chemin)
    "christian-kohler.path-intellisense", // autocomplétion de chemins
    "sleistner.vscode-fileutils", // outils fichiers/dossiers (copier/move)
    "ms-vscode.vscode-typescript-next", // TS plus frais (optionnel)
    "msjsdiag.vscode-react-native" // outils React Native
  ]
}
