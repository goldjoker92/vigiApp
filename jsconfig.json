{
  "compilerOptions": {
    "checkJs": false,               // tu peux mettre true si tu veux des v√©rifs TS sur JS
    "noEmit": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]                // garde ton alias
    },
    "types": ["react", "react-native", "jest"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "app/**/*",
    "src/**/*",
    "store/**/*",
    "utils/**/*",
    "expo-env.d.ts",
    ".expo/types/**/*.ts",
    "**/*.js",
    "**/*.jsx"
  ],
  "exclude": ["node_modules", "android", "ios"]
}
