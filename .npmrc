# --- Sécurité & stabilité installs ---
legacy-peer-deps=true        # neutralise les conflits de peer deps (classique RN/Expo)
engine-strict=false          # ne bloque pas si l’engine varie légèrement
strict-peer-deps=false

# --- Vitesse & bruit ---
audit=false                  # pas d’audit pendant le CI
fund=false                   # pas de messages de financement
progress=false               # logs npm plus lisibles sur EAS

# --- Résolution versions ---
save-exact=true              # fige exactement la version installée (évite les surprises)
prefer-online=true            # ne force pas la vérif réseau si le cache suffit

# --- Réseau (timeouts un peu plus généreux pour EAS) ---
fetch-retries=5
fetch-retry-factor=2
fetch-retry-maxtimeout=120000
fetch-retry-mintimeout=10000
package-lock=false
